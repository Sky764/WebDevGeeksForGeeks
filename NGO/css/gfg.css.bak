}
#side p{
	font-size:31px;
	font-family:"Bahnschrift Light","Century Gothic",Arial;
	margin-bottom:32px;
}
button
{
	
	width: 292px;
	height:50px;
	padding:5px;
	margin-left:5px;
	text-align:center;
	text-decoration:none;
	outline:none;
	cursor: pointer;
	border-radius: 15px;
	box-shadow: 0 9px #999;
	background:#b56d2a;
	font-size:25px;
	color:blue;
	
	
}
#about h2{
	width: 300px;
	border-bottom: 3px solid blue;
	text-align:center;
	font-size:2rem;
	font-weight:150;
	margin:0 auto 50px;
	position:relative;
	padding:7px 0;
	text-transform:uppercase;
}
#about div{
	display:inline-block;
	width: 30%;
	text-align:center;
	padding-left:5px;
	height 15px;
	left: 25px;
	background:#5c2828;
	right:25px;
	margin-right:42px;
	height:110px;
	border-radius:5px 5px 5px 5px;
}
#about{
	padding-left:5px;
}
#about div a{
	text-decoration:none;
	font-size:30px;
	color:black;
	width: 30%;
	height: 35vh;
	transition:0.5s;
}
#about div a:hover{
	opacity:0.7;
}
#events{
	display:inline-block;
	
	
}
#events div{
	width:75%;
	height:470px;
	box-sizing:border-box;
	border: 3px solid black;
	background:red;
	padding:10px;
	margin:10px;
    border-radius:0 0 5px 5px;
	text-align:center;
	
}
#events div img{
	
	width:40%;
	height:154px;
}
.program{
	display:block;
	width:300px;
	height:48px;
	background:#a0a3a2;
	text-decoration:none;
	margin-left:20%;
	padding-top:15px;
	color:#ffffff;
	border-radius:5px 5px 5px 5px;
	
}
#events div a:last-child{
	padding-top:25px;
	padding-left:25px;
	display:block;
	padding-left:450px;
	
}
aside{
	display:inline-block;
	box-sizing:border-box;
	border: 3px solid black;
	position:absolute;
	top: 1133px;
    left: 797px;
    width: 45%;
    height: 500px;
	background:yellow;
	font-size:30px;
	
}
.left a{
	box-sizing:border-box;
	border:2px solid black;
	display:inline-block;
