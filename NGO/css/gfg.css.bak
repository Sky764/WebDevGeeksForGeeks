.rt{
		box-sizing:border-box;
	text-decoration:none;
	display:inline-block;
	
	height: 30px;
	padding:4%;
	padding-left:3%;
	margin-left: 0%;
	margin-right:0px;
	border: 1px solid black;
	
	border-radius: 5px 5px 5px 5px;
	text-transform:capitalize;
	color:#ffffff;
	background:red;
	transition:1s;
	
	
}
#logo{
	height: 75px;
